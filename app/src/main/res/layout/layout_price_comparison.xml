<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#311B92">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#E6E6FA"
        android:layout_marginBottom="24dp"
        android:alpha="0.5"/>

    <LinearLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminateTint="#E6E6FA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Căutăm pe Elefant, Bookzone, Libris..."
            android:textColor="#E6E6FA"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oferte Găsite"
            android:textColor="#E6E6FA"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScannedIsbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BDBDBD"
            android:layout_marginBottom="20dp"
            android:text="ISBN: 0000000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBookzone"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="Vezi pe Bookzone"
                    android:textColor="#311B92"
                    app:backgroundTint="#E6E6FA"
                    app:cornerRadius="12dp" />
                <TextView
                    android:id="@+id/badgeBookzone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:background="#FFD700"
                    android:text="CEL MAI IEFTIN"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnElefant"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="Vezi pe Elefant"
                    android:textColor="#311B92"
                    app:backgroundTint="#E6E6FA"
                    app:cornerRadius="12dp" />
                <TextView
                    android:id="@+id/badgeElefant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:background="#FFD700"
                    android:text="RECOMANDAT"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLibris"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="Vezi pe Libris"
                android:textColor="#311B92"
                app:backgroundTint="#E6E6FA"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCarturesti"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="Vezi pe Cărturești"
                android:textColor="#311B92"
                app:backgroundTint="#E6E6FA"
                app:cornerRadius="12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Prețurile pot varia în funcție de stoc și transport."
            android:textAlignment="center"
            android:textColor="#BDBDBD"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>